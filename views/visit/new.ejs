<div class="content">
    <!-- START JUMBOTRON -->
    <div class="jumbotron" data-pages="parallax">
        <div class="container-fluid container-fixed-lg sm-p-l-20 sm-p-r-20">
            <div class="inner">
                <!-- START BREADCRUMB -->
                <ul class="breadcrumb">
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/visit/" class="active">Visit</a></li>
                    <li>Add new</li>
                </ul>
                <!-- END BREADCRUMB -->
            </div>
        </div>
    </div>
    <!-- END JUMBOTRON -->
    <!-- START CONTAINER FLUID -->
    <div class="container-fluid container-fixed-lg">
        <!-- BEGIN PlACE PAGE CONTENT HERE -->
        <h1>Add new visit for <%= customer.first_name %> <%= customer.last_name %></h1>

        <form role="form" action="/visit/create" method="post">
            <input type="hidden" class="form-control" value="<%= customer.id %>" name="owner">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group form-group-default">
                        <label>Check in date</label>
                        <input type="text" class="form-control" placeholder="ex: Õhtusöök" name="checkin" required>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group form-group-default">
                        <label>Check-out date</label>
                        <input type="text" class="form-control" placeholder="ex: Dow" name="checkout" required>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group form-group-default">
                        <label>Agency name</label>
                        <input type="text" class="form-control" placeholder="ex: Dow" name="agency_name" required>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group form-group-default">
                        <label>Hotel name</label>
                        <input type="text" class="form-control" placeholder="ex: Dow" name="hotel_name" required>
                    </div>
                </div>
            </div>

            <input type="submit" value="Add new visit" class="btn btn-primary btn-cons">
        </form>

        <!-- END PLACE PAGE CONTENT HERE -->
    </div>
    <!-- END CONTAINER FLUID -->
</div>